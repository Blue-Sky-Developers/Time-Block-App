<h1><%= @event.name %></h1>

<p><strong>Start Time:</strong> <%= @event.start_time.strftime('%B %d, %Y %I:%M %p') %></p>
<p><strong>End Time:</strong> <%= @event.end_time.strftime('%B %d, %Y %I:%M %p') %></p>
<p><strong>Priority:</strong> <%= @event.priority.capitalize %></p>

<%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-primary' %>
<%= link_to 'Back', calendar_path, class: 'btn btn-secondary' %>
<%= link_to 'Delete', event_path(@event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
