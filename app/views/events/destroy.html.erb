<%= form_with(model: @event, local: true, method: :delete) do |form| %>
    <div class="delete-event-form">
      <h1>Delete Event</h1>
      <p>Are you sure you want to delete this event?</p>
    
      <div class="form-actions">
        <%= form.submit "Delete Event", data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
  