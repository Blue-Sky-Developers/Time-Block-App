<%= form_with(model: @event, local: true) do |form| %>
    <div class="edit-event-form">
      <% if @event.new_record? %>
        <h1>Create New Event</h1>
      <% else %>
        <h1>Edit Event</h1>
      <% end %>
  
      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "input-text" %>
      </div>
  
      <div class="form-group">
        <%= form.label :start_time, class: "form-label" %>
        <%= form.datetime_select :start_time, {ampm: true}, class: "input"%>
      </div>
  
      <div class="form-group">
        <%= form.label :end_time, class: "form-label" %>
        <%= form.datetime_select :end_time, {ampm: true}, class: "input" %>
      </div>
  
      <div class="form-group">
        <%= form.label :priority, class: "form-label" %>
        <%= form.select :priority, [["Low", "low"], ["Medium", "medium"], ["High", "high"]], {}, class: "input-text" %>
      </div>
  
      <div class="form-actions">
        <%= form.submit @event.new_record? ? "Create Event" : "Update Event", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>