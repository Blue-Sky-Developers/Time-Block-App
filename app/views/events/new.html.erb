<%= form_with(model: @event, local: true) do |form| %>
  <div>
    <h1>Create New Event</h1>
  </div>
  <br>
  <br>
  <div class="tip">
    <h3>Tip!</h3><p>Create your time blocks to be an hour or longer to maximize undisturbed focused time!</p>
  </div>
  <br>
  <br>
    <div class="edit-event-form">
      <div>
        <%= form.label :name %>
        <%= form.text_field :name, class: "input-text"%>
      </div>
      <div>
        <%= form.label :start_time %>
        <%= form.datetime_select :start_time, {ampm: true}, class: "input"%>
      </div>
      <div>
        <%= form.label :end_time %>
        <%= form.datetime_select :end_time, {ampm: true}, class: "input" %>
      </div>
      <div>
        <%= form.label :priority %>
        <%= form.select :priority, Event.priorities.keys, class: "input" %>
      </div>
      <div>
        <%= form.submit "Create Event", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  